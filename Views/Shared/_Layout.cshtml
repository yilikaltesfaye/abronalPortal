<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Abronal Internship Portal</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font/remixicon.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="https://abronal.com/website/img/favicon.png" />
</head>
<body class="grid min-h-screen">
    
    <header class="p-4 fixed w-full bg-white bg-opacity-95 shadow-sm">
        <nav id="desktopNav" class="md:block">
            <div class="flex items-center justify-between md:justify-around">
                <a asp-area="" asp-controller="home" asp-action="index" >
                    <img src="~/logo.png" class="w-36" alt="" srcset="">
                </a>
                <i class="ri-menu-line text-3xl md:hidden cursor-pointer" id="openNav"></i>
                @* Desktop View *@
                <ul class="hidden md:flex gap-7 mr-7 items-center">
                    <li>
                        <a asp-area="" asp-controller="home" asp-action="terms" class="text-lg font-medium hover:opacity-75 transition-all ease-in duration-300">Terms</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="home" asp-action="benefits" class="text-lg font-medium hover:opacity-75 transition-all ease-in duration-300">Benefits</a>
                    </li>
                    <li>
                        <a href="https://abronal.com/" class="text-lg font-medium hover:opacity-75 transition-all ease-in duration-300 border-2 border-[#1B2240] p-2">Website</a>
                    </li>
                    <a asp-controller="apply" asp-action="index">
                        <button
                            class="flex items-center text-lg w-fit px-7 py-2  border bg-[#1B2240] border-[#1B2240] text-white cursor-pointer hover:bg-inherit hover:text-[#1B2240] transition-all duration-200 ease-in"
                        >
                            Apply
                        </button>
                    </a>
                    <partial name="_LoginPartial" />
                </ul>
            </div>

        </nav>
        @* mobile view *@
        <nav id="mobileNav" class="hidden md:hidden" >
            <div class="fixed inset-0 p-4 bg-white z-30 transform transition-transform duration-300 ease-in-out md:hidden flex flex-col">
                <div class="flex items-center justify-between">
                    <a asp-area="" asp-controller="home" asp-action="index" >
                        <img src="~/logo.png" class="w-36" alt="logo" srcset="">
                    </a>
                    <i class="ri-close-line text-3xl md:hidden cursor-pointer" id="closeNav"></i>
                </div>
                <div class="flex flex-col h-full items-center justify-around">
                    <ul class="flex flex-col gap-10 items-center">
                        <li><a asp-area="" asp-controller="home" asp-action="terms" class="text-xl">Terms</a></li>
                        <li><a asp-area="" asp-controller="home" asp-action="benefits" class="text-xl">Benefits</a></li>
                        <li><a href="https://abronal.com/" class="text-xl border-2 border-[#1B2240] p-2">Website</a></li>
                    </ul>
                    <a asp-controller="apply" asp-action="index">
                        <button
                            class="text-xl w-fit px-10 py-2 rounded-2xl bg-[#1B2240] text-white font-semibold cursor-pointer"
                        >
                            Apply
                        </button>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="mt-[68px] md:mt-[78px]">
        @RenderBody()
    </main>

    <footer class="text-center py-3 self-end">
        <div>
            <p>&copy; 2025 - Abronal Technologies - <a asp-area="" asp-controller="home" asp-action="terms" class="underline font-bold hover:underline-offset-4">Terms</a></p>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
