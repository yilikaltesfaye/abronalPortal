@using abronalPortal.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="flex z-0 flex-col xl:px-40 justify-center items-center bg-steel-blue object-contain min-h-[86vh]">
    <div class="bg-white rounded-2xl flex-col flex my-5 gap-6 px-5 sm:px-20 py-2 sm:py-8 shadow-2xl sm:min-w-xl">
        <div class="text-center flex-col flex sm:gap-2">
            <h1 class="text-3xl sm:text-4xl">Welcome Back</h1>
            <p class="text-lg sm:text-2xl">Login Here</p>
        </div>
                <form asp-action="Login" method="post">

        @* <form class="flex flex-col gap-3 sm:gap-5" asp-action="Login" method="post"> *@
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="bg-red text-white"></div>
            <div class="flex flex-col gap-3">
                <label asp-for="Email" class="text-lg sm:text-xl">Email</label>
                <input
                type="email"
                asp-for="Email"
                placeholder="Your Email Address"
                required
                class="outline-0 py-1 pl-3 font-bold rounded bg-white border"
                />
                <span asp-validation-for="Email" class="bg-red text-white"></span>
            </div>
            <div class="flex flex-col gap-3">
                <label asp-for="Password" class="text-lg sm:text-xl">Password</label>
                <input
                type="password"
                asp-for="Password"
                placeholder="Password"
                required
                class="outline-0 py-1 pl-3 font-bold rounded bg-white border"
                />
                <span asp-validation-for="Password" class="bg-red text-white"></span>
            </div>
            <div class="flex items-center gap-2">
                <input type="checkbox" asp-for="RememberMe" class="w-4 h-4" />
                <label asp-for="RememberMe" class="text-lg sm:text-xl">@Html.DisplayNameFor(a => a.RememberMe)</label>

            </div>
            <div class="flex items-center gap-2">
                <a asp-area="" asp-controller="login" asp-action="forgotpassword" class="text-lg sm:text-xl underline">Forgot Password?</a>
            </div>
            <div class="w-full mt-6">
                    <input type="submit" class="flex w-full justify-center text-lg px-10 rounded-2xl py-2 border-2 bg-[#1B2240] border-[#1B2240] text-white cursor-pointer hover:bg-inherit hover:text-[#1B2240] transition-all duration-200 ease-in" value="LogIn" />
            </div>
        </form>
        <p class="text-center">Don't have an account? <a asp-area="" asp-controller="SignUp" asp-action="Index" class="underline hover:underline-offset-4 font-semibold">Register</a></p>
        <p class="text-center">Go <a asp-area="" asp-controller="Gome" asp-action="Index" class="underline hover:underline-offset-4 font-semibold">Back Home</a></p>
        
    </div>
</div>

@section Scripts {
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}